{
  "compilerOptions": {

    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [ "../node_modules/@types" ],
    "types": [ "node" ]
  },

   "include": [ "src/**/*.ts" ],
   "exclude": [ "node_modules" ],
   "compileOnSave": true,
   "buildOnSave": true
}
